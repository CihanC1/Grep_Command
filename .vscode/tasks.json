{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Grep (Makefile)",
            "type": "shell",
            "command": "make",
            "group": "build"
        },
        {
            "label": "Run Grep",
            "type": "shell",
            "command": "build/grep",
            "args": [
                "-i",
                "search",
                "example.txt"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build Grep (Makefile)"
            ]
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "make clean",
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}